# generic bash commands

# default editor
export VISUAL=vim
export EDITOR=vim

# disable default ctrl+s
stty -ixon

# turn caps lock into an escape key, who the hell uses caps lock anyway?
xmodmap -e "clear lock"
xmodmap -e "keycode 0x42 = Escape"

# setting this term fixes a lot of issues with various command line programs
export TERM='xterm-256color'

# setting to help tmux-powerline work correctly
PS1="$PS1"'$([ -n "$TMUX" ] && tmux setenv TMUXPWD_$(tmux display -p "#I_#P") "$PWD")'
